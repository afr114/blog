<%= @post.title %>
<% @tags.each do |tag| %>
| <%= link_to tag.name, edit_admin_post_tag_path(@post.id, tag.id)%>
<% end %>

<p><%= @post.content %><p>

<%= link_to "Add Tags", new_admin_post_tag_path(@post), class: "btn btn-default", id: "add_tags_link", remote: true %><br>
<%= link_to "Edit Post", edit_admin_post_path(@post), id: "edit_post_link", class: "btn btn-default", remote: true %><br>
<%= link_to "Delete Post", admin_post_path(@post), class: "btn btn-default", :data => {:confirm => "Are you sure?", :method => "delete"} %><br>
